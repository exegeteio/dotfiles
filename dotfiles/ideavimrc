" Includes
set highlightedyank
set surround

" Leader as space!
let mapleader = " "

" Keymaps!
map n nzz
map N Nzz
map G Gzz

map <C-u> <C-u>zz
map <C-d> <C-d>zz
" Tab navigation
"
nnoremap <C-e> :tabnext<CR>
nnoremap <C-w> :tabprev<CR>

map ]g <Action>(GotoNextError)
map [g <Action>(GotoPreviousError)
nnoremap <C-n> <Action>(GotoNextError)

map <leader><leader> <Action>(RecentFiles)
