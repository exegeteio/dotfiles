#!/usr/bin/env bash
set -e

git fetch --all -p -q
selected="$(git branch $@ | grep -v "HEAD" | grep -v '^\* ' | columnize | uniq2 | sort | menu)"
if [ -z "$selected" ]; then
	echo "Nothing selected."
else
	git g
	git checkout "$selected"
	# Hackery for work.
	[ -f "$HOME/.Gemfile.lock" ] && [ -f "./Gemfile.lock" ] && cp "$HOME/Gemfile.lock" ./
fi
