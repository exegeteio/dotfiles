#!/usr/bin/env bash

# Preferred editor for local and remote sessions
if [ "$TERM_PROGRAM" = "vscode" ]; then
  export EDITOR='code -wr'
  export EDITOR_ARGS='code.args'
else
  if [ -x "$(which nvim)" ]; then
    export EDITOR='nvim'
  else
    export EDITOR='vim'
  fi
  export EDITOR_ARGS='vi.args'
fi
alias e="$EDITOR"
