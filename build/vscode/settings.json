{
    "chat.editor.fontSize": 20,
    "debug.console.fontSize": 20,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.fontFamily": "JetBrainsMono Nerd Font, FiraCode Nerd Font, Fira Code, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 20,
    "editor.inlineSuggest.enabled": true,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.stickyScroll.enabled": true,
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "files.autoSave": "onFocusChange",
    "git.autofetch": true,
    "markdown.preview.fontSize": 20,
    "scm.inputFontSize": 20,
    "screencastMode.fontSize": 40,
    "terminal.integrated.confirmOnExit": "hasChildProcesses",
    "terminal.integrated.fontSize": 20,
    "terminal.integrated.tabs.defaultColor": "terminal.ansiBlue",
    "terminal.integrated.tabs.enabled": false,
    "terminal.integrated.tabs.location": "right",
    "window.zoomLevel": 1,
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "none",
    "zenMode.hideLineNumbers": false,
    "editor.rulers": [
        120
    ],
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    "vim.easymotion": true,
    "vim.enableNeovim": true,
    "vim.leader": "<space>",
    "vim.overrideCopy": false,
    "vim.smartRelativeLine": true,
    "vim.vimrc.enable": true,
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "<leader>",
                "o"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": [
                "<leader>",
                " "
            ],
            "commands": [
                "workbench.action.showEditorsInActiveGroup"
            ]
        },
        {
            "before": [
                "<leader>",
                "f",
                "c"
            ],
            "commands": [
                "copyRelativeFilePath"
            ]
        },
        {
            "before": [
                "<leader>",
                "f",
                "f"
            ],
            "commands": [
                "editor.action.formatDocument"
            ]
        },
        {
            "before": [
                "<leader>",
                "g",
                "d"
            ],
            "commands": [
                "editor.action.revealDefinition"
            ]
        },
        {
            "before": [
                "<leader>",
                "g",
                "u"
            ],
            "commands": [
                "editor.action.goToReferences"
            ]
        },
        {
            "before": [
                "<leader>",
                "g",
                "g"
            ],
            "commands": [
                ":normal viw",
                "workbench.action.findInFiles"
            ]
        },
        {
            "before": [
                "<leader>",
                "g",
                "s"
            ],
            "commands": [
                "workbench.action.findInFiles"
            ]
        },
        {
            "before": [
                "<leader>",
                "p"
            ],
            "commands": [
                "execPaste"
            ]
        },
        {
            "before": [
                "<leader>",
                "v",
                "z"
            ],
            "commands": [
                "workbench.action.toggleZenMode"
            ]
        },
        {
            "before": [
                "<leader>",
                "g",
                "p"
            ],
            "commands": [
                "github.copilot.generate"
            ]
        },
        {
            "before": [
                "<leader>",
                "g",
                "c"
            ],
            "commands": [
                "workbench.panel.chat.view.copilot.focus"
            ]
        },
        {
            "before": [
                ":",
                "W",
                "<CR>"
            ],
            "commands": [
                "workbench.action.files.save"
            ]
        },
        {
            "before": [
                "]",
                "g"
            ],
            "commands": [
                "editor.action.marker.next"
            ]
        },
        {
            "before": [
                "[",
                "g"
            ],
            "commands": [
                "editor.action.marker.prev"
            ]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [
                "<leader>",
                "c"
            ],
            "commands": [
                "execCopy"
            ]
        },
        {
            "before": [
                "<leader>",
                "f",
                "f"
            ],
            "commands": [
                "editor.action.formatSelection"
            ]
        },
        {
            "before": [
                "<leader>",
                "p"
            ],
            "commands": [
                "execPaste"
            ]
        }
    ],
    "[ruby]": {
        "editor.defaultFormatter": "Shopify.ruby-lsp",
        "editor.formatOnSave": false,
        "editor.formatOnType": true,
        "editor.insertSpaces": true,
        "editor.semanticHighlighting.enabled": true,
        "editor.tabSize": 2,
        "files.insertFinalNewline": true
    },
    "rubyLsp.indexing": {
        "excludedPatterns": [
            "**/spec/**.rb"
        ],
    },
    "editor.lineNumbers": "relative",
    "terminal.integrated.env.osx": {
        "SKIP_TMUX": "true"
    },
    "terminal.external.osxExec": "iTerm2.app",
    "terminal.integrated.tabs.defaultIcon": "console",
    "terminal.integrated.scrollback": 10000,
    "workbench.colorTheme": "Default High Contrast",
    "editor.formatOnSaveMode": false,
    "files.trimTrailingWhitespaceInRegexAndStrings": false,
    "editor.trimAutoWhitespace": false,
    "zenMode.showTabs": "none",
    "zenMode.centerLayout": false,
    "zenMode.fullScreen": false,
    "security.promptForLocalFileProtocolHandling": false,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": false
    },
    "github.copilot.nextEditSuggestions.enabled": true,
    "git.openRepositoryInParentFolders": "never",
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "typescript.updateImportsOnFileMove.enabled": "always",
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "dotfiles.repository": "https://github.com/exegeteio/dotfiles",
    "dotfiles.targetPath": "~/.config/dotfiles"
}