{
    "chat.editor.fontSize": 20,
    "debug.console.fontSize": 20,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.fontFamily": "JetBrainsMono Nerd Font, FiraCode Nerd Font, Fira Code, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 20,
    "editor.inlineSuggest.enabled": true,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.stickyScroll.enabled": true,
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "files.autoSave": "onFocusChange",
    "git.autofetch": true,
    "html.format.wrapLineLength": 80,
    "markdown.preview.fontSize": 20,
    "scm.inputFontSize": 20,
    "screencastMode.fontSize": 40,
    "terminal.integrated.confirmOnExit": "hasChildProcesses",
    "terminal.integrated.fontSize": 20,
    "terminal.integrated.tabs.defaultColor": "terminal.ansiBlue",
    "terminal.integrated.tabs.enabled": false,
    "terminal.integrated.tabs.location": "right",
    "window.zoomLevel": 1,
    "workbench.layoutControl.enabled": false,
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "none",
    "zenMode.centerLayout": false,
    "zenMode.fullScreen": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.hideStatusBar": false,
    "editor.rulers": [
        80,
        120
    ],

    // VIM
    // To improve performance"
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    "vim.easymotion": true,
    "vim.enableNeovim": true,
    "vim.leader": "<space>",
    "vim.overrideCopy": false,
    "vim.smartRelativeLine": true,
    "vim.vimrc.enable": true,
    "vim.normalModeKeyBindings": [
        { "before": [ "<leader>", "o" ],
          "commands": [ "workbench.action.quickOpen" ] },
        { "before": [ "<leader>", " " ],
          "commands": [ "workbench.action.showEditorsInActiveGroup" ] },
        { "before": [ "<leader>", "f", "c" ],
          "commands": [ "copyFilePath" ] },
        { "before": [ "<leader>", "f", "f" ],
          "commands": [ "editor.action.formatDocument" ] },
        { "before": [ "<leader>", "g", "d" ],
          "commands": [ "editor.action.revealDefinition" ] },
        { "before": [ "<leader>", "g", "g" ],
          "commands": [ ":normal viw", "workbench.action.findInFiles" ]
        }, { "before": [ "<leader>", "g", "s" ],
          "commands": [ "workbench.action.findInFiles" ] },
        { "before": [ "<leader>", "p" ],
          "commands": [ "execPaste" ] },
        { "before": [ "<leader>", "v", "z" ],
          "commands": [ "workbench.action.toggleZenMode" ] },
        { "before": [ "<leader>", "g", "p" ],
          "commands": [ "github.copilot.generate" ] },
        { "before": [ "<leader>", "g", "c" ],
          "commands": [ "workbench.panel.chat.view.copilot.focus" ] },
        { "before": [ ":", "W", "<CR>" ],
          "commands": [ "workbench.action.files.save" ] },
    ],
    "vim.visualModeKeyBindings": [
        { "before": [ "<leader>", "c" ],
          "commands": [ "execCopy" ] },
        { "before": [ "<leader>", "f", "f" ],
          "commands": [ "editor.action.formatSelection" ] },
        { "before": [ "<leader>", "p" ],
          "commands": [ "execPaste" ] },
    ],

    // Ruby
    "[ruby]": {
        "editor.defaultFormatter": "Shopify.ruby-lsp",
        "editor.formatOnSave": false,
        "editor.formatOnType": true,
        "editor.insertSpaces": true,
        "editor.semanticHighlighting.enabled": false,
        "editor.tabSize": 2,
        "files.insertFinalNewline": true,
        "files.trimTrailingWhitespace": true,
    },
}